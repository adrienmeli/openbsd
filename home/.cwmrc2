# Set default Xft(3) font
# fontname "sans-serif:pixelsize=14:bold"
fontname "Source Code Pro:pixelsize=14"


# Turn on sticky-group mode
sticky yes

# Any entry here is shown in the application menu
command firefox  firefox
command chromium  chromium
command xmms  xmms
command top  "st -e top"
command term "st"

# Autogroup definitions
autogroup 3 "st"

# Ignore programs by that name by not drawing borders around them.
ignore XMMS
ignore xwi
ignore xapm
ignore xclock

# Key bindings
bind-key CM-r  window-menu-label
bind-key CS-Return "st -e top"
bind-key C4-equal window-vmaximize
bind-key C4S-equal window-hmaximize
bind-key M-1  group-only-1
bind-key M-2  group-only-2
bind-key M-3  group-only-3
bind-key MS-1  window-movetogroup-1
bind-key MS-2  window-movetogroup-2
bind-key MS-3  window-movetogroup-3
unbind-key 4-o
unbind-key CM-equal
unbind-key CMS-equal

# tiling
bind-key 4-t window-htile
bind-key 4-Return window-vtile
bind-key 4-f window-fullscreen
bind-key 4-Tab group-toggle-all
bind-key 4-j window-cycle
bind-key 4-k window-rcycle

moveamount 20
bind-key 4-h window-resize-left 10
bind-key 4-l window-resize-right 10

bind-key M4-Up window-snap-up
bind-key M4-Down window-snap-down
bind-key M4-Left window-snap-left
bind-key M4-Right window-snap-right
bind-key 4-q restart
bind-key 4S-q quit


# applications
bind-key M-w  chromium
bind-key 4S-Return terminal


# Mouse bindings
bind-mouse M-2  window-lower
bind-mouse M-3  window-resize


borderwidth 2
color activeborder blue
color inactiveborder darkblue
gap 10 10 10 10

bind 4S-Left bigptrmoveleft
bind 4S-Right bigptrmoveright
bind 4S-Up bigptrmoveup
bind 4S-Down bigptrmovedown
bind 4-Left ptrmoveleft
bind 4-Right ptrmoveright
bind 4-Up ptrmoveup
bind 4-Down ptrmovedown

bind-key 4-ampersand        group-only-1
bind-key 4-eacute           group-only-2
bind-key 4-quotedbl         group-only-3
bind-key 4-apostrophe       group-only-4
bind-key 4-parenleft        group-only-5
bind-key 4-minus            group-only-6
bind-key 4-egrave           group-only-7
bind-key 4-underscore       group-only-8
bind-key 4-ccedilla         group-only-9
bind-key M-agrave           group-toggle-all

# Déplacer les fenêtres dans un groupe
bind-key 4S-ampersand        window-movetogroup-1
bind-key 4S-eacute           window-movetogroup-2
bind-key 4S-quotedbl         window-movetogroup-3
bind-key 4S-apostrophe       window-movetogroup-4
bind-key 4S-parenleft        window-movetogroup-5
bind-key 4S-minus            window-movetogroup-6
bind-key 4S-egrave           window-movetogroup-7
bind-key 4S-underscore       window-movetogroup-8
bind-key 4S-ccedilla         window-movetogroup-9
